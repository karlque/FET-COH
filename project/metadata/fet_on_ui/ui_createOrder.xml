  <methodList>
    <method name="createOrder" type="uimthd">
      <script><![CDATA[
        /*
         *
         */

        var createOrderResponse = fet_on_api.createOrderBehavior(this.createOrderRequest);
        var result = createOrderResponse.mapTo(new Document('fet_on_ui.createOrderResponseDoc'), 'fet_on_ui.createOrderResponseDS2Doc');
        var dataObjectList = new DataObjectList();
        for (var i = 0 ; result && i < result.length ; i ++) {
            dataObjectList.addLast(result[i]);
        }

        this.createOrderResponseDoc = dataObjectList;

        return;
      ]]></script>
    </method>
    <method name="onInit" type="action">
      <valueType>nmeta_com.conceptwave.system.Object</valueType>
      <script><![CDATA[
        this.createOrderRequest = new DataStructure('fet_on_api.createOrderRequest');
        this.createOrderResponseDoc = new DataObjectList();
      ]]></script>
    </method>
    <method name="onSelected" type="uimthd">
      <script><![CDATA[
        /*
         * auther:karl
         */

        var selectedList = this.createOrderResponseDoc.selected;

        for (var i = 0 ; selectedList && i < selectedList.length ; i ++) {
            var selected = selectedList[i];
            this.parent.addItems.addItemsRequest.orderId = selected.orderId;
        }

        return;
      ]]></script>
    </method>
  </methodList>
