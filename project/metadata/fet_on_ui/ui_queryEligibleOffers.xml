  <methodList>
    <method name="queryEligibleOffers" type="uimthd">
      <script><![CDATA[
        /*
         *
         */

        var queryEligibleOffersResponse = fet_on_api.queryEligibleOffersBehavior(this.queryEligibleOffersRequest);
        var result = queryEligibleOffersResponse.mapTo(new Document('fet_on_ui.queryEligibleOffersResponseDoc'), 'fet_on_ui.queryEligibleOffersResponseDS2Doc');
        var dataObjectList = new DataObjectList();
        for (var i = 0 ; result && i < result.length ; i ++) {
            dataObjectList.addLast(result[i]);
        }

        this.queryEligibleOffersResponseDoc = dataObjectList;

        return;
      ]]></script>
    </method>
    <method name="onInit" type="action">
      <valueType>nmeta_com.conceptwave.system.Object</valueType>
      <script><![CDATA[
        this.queryEligibleOffersRequest = new DataStructure('fet_on_api.queryEligibleOffersRequest');
        this.queryEligibleOffersResponseDoc = new DataObjectList();
      ]]></script>
    </method>
    <method name="onSelected" type="uimthd">
      <script><![CDATA[
        /*
         * auther:karl
         */

        var selectedList = this.queryEligibleOffersResponseDoc.selected;

        for (var i = 0 ; selectedList && i < selectedList.length ; i ++) {
            var selected = selectedList[i];
            this.parent.addItems.addItemsRequest.offerCode = selected.code;
        }

        return;
      ]]></script>
    </method>
  </methodList>
